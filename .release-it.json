{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release ${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "master",
    "commit": false,
    "commitArgs": "-a",
    "push": true,
    "pushArgs": "--follow-tags",
    "beforeCommit": "npm run before:release"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "npm": {
    "publish": false
  }
}
