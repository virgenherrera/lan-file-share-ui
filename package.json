{
  "name": "lan-file-share-ui",
  "version": "1.5.2",
  "license": "MIT",
  "engines": {
    "node": ">=18.12.0 <19",
    "npm": ">=8.6.0"
  },
  "private": true,
  "scripts": {
    "test": "run-s -l cleanup test:* build:prod",
    "start": "ng serve",
    "open": "npm run start -- --open",
    "formatCode": "npm run test:static -- --fix",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "UT:develop": "ng test --watch --code-coverage --browsers=ChromeHeadless",
    "test:CI": "npm ci",
    "test:static": "eslint \"src/**/*.ts\"",
    "test:unit": "ng test --no-watch --code-coverage --browsers=ChromeHeadless",
    "build:prod": "ng build --configuration production --optimization --progress --subresource-integrity --delete-output-path",
    "cleanup": "shx rm -rf .angular/ coverage/ dist/",
    "before:release": "run-s -l cleanup test:* build:prod public:*",
    "public:drop": "shx rm -rf public_html/",
    "public:save": "shx mv -f dist/lan-file-share-ui/ public_html/ "
  },
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.1.7",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.1.7",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/platform-browser": "^16.1.0",
    "@angular/router": "^16.1.0",
    "@fontsource/roboto": "^5.0.8",
    "material-icons": "^1.13.9",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.5",
    "@angular/cli": "~16.1.5",
    "@angular/compiler-cli": "^16.1.0",
    "@ngneat/spectator": "^15.0.1",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint": "^8.46.0",
    "jasmine-core": "~5.1.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-jasmine": "~5.1.0",
    "karma": "~6.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "shx": "^0.3.4",
    "typescript": "~5.1.3"
  }
}
